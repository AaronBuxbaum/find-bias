type User {
  id: ID! @id
  email: String @unique
  name: String!
}

type Domain {
  id: ID! @id
  name: String!
  url: String!
  pages: [Page!]!
}

type Page {
  id: ID! @id
  name: String
  url: String
  content: PageContent @relation(link: INLINE)
  domain: Domain @relation(link: INLINE)
}

type PageContent {
  id: ID! @id
  page: Page
  content: String!
}

type TwitterUser {
  id: ID! @id
  handle: String! @unique
  tweets: [Tweet!]! @relation(link: INLINE)
  statuses_count: Int
  name: String
}

type Tweet {
  id: ID! @id
  twitterId: String!
  handle: TwitterUser!
  text: String!
}
